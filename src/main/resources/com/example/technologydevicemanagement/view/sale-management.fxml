<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technologydevicemanagement.controller.MainViewController">

    <top>
        <FlowPane id="topPane" alignment="CENTER_RIGHT" prefHeight="61" prefWidth="600">
            <children>
                <Label prefHeight="18.0" prefWidth="298.0" text="Sale Management">
                    <font>
                        <Font name="Century Schoolbook" size="33.0" />
                    </font>
                    <FlowPane.margin>
                        <Insets right="100.0" />
                    </FlowPane.margin>
                </Label>
                <TextField id="searchField" prefHeight="30" prefWidth="184" promptText="search">
                    <FlowPane.margin>
                        <Insets right="5.0" />
                    </FlowPane.margin></TextField>
                <Button prefHeight="30" prefWidth="70" text="Search">
                    <FlowPane.margin>
                        <Insets right="10.0" />
                    </FlowPane.margin></Button>
                <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="91.0" text="Import Device">
                    <FlowPane.margin>
                        <Insets />
                    </FlowPane.margin>
                </Button>
                <Button onAction="#showCreateOrderView" prefHeight="30" prefWidth="120" text="Create Orders">
                    <FlowPane.margin>
                        <Insets left="10.0" right="10.0" />
                    </FlowPane.margin></Button>
                <Button prefHeight="30" text="Button">
                    <FlowPane.margin>
                        <Insets right="20.0" />
                    </FlowPane.margin></Button>
            </children>
        </FlowPane>
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="500" prefWidth="1200">
            <TableView fx:id="historyOrderTable" prefHeight="618" prefWidth="1198">
                <columns>
                    <TableColumn fx:id="orderIdColumn" prefWidth="130" text="Code Orders" />
                    <TableColumn fx:id="productListColumn" prefWidth="555" text="List Of Products" />
                    <TableColumn fx:id="paymentDateColumn" prefWidth="200" text="Date Of Payment" />
                    <TableColumn fx:id="amountColumn" prefWidth="180" text="Amount" />
                    <TableColumn fx:id="actionColumn" prefWidth="130" text="See Details" />
                </columns>
            </TableView>

        </ScrollPane>
    </center>

</BorderPane>